      <main>
        <p id="notice"></p>
        <div class='container'>
  <div class='row'>
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
  		<h1>Editing Book</h1>
    <%= flash[:notice] %>
    <% if @book.errors.any? %>
      <%= @book.errors.count %>errors
      <ul>
        <% @book.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    <% end %>

<%= form_with model: @book do |f| %>
    <div class="form-group">
    <label for="book_title">Title</label>
      <%= f.text_field :title, autofocus: true, id:"inputTitle", placeholder:"title", class:"form-control book_title" %>
    </div>
    <div class="form-group">
      <label for="book_opinion">Opinion</label>
      <%= f.text_area :body, autofocus: true, id:"book_body", placeholder:"body", class:"form-control book_body" %>
    </div>
    <div class="form-group">
      <%= f.submit "Update Book", class:"btn btn-success" %>
    </div>
<% end %>
  		<!--<a class="book_52617" href="/books/52617">Show</a> -->
  		 <%= link_to(book_path(@book.id), class:"book_52617") do %>
            Show
        <% end %>

  		<!--<a class="back" href="/books">Back</a>-->
  		 <%= link_to(books_path) do %>
            Back
        <% end %>
  </div>
</div>
      </main>